{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "route_api": {
        "ClusterId": "cluster_api",
        "Match": {
          "Hosts": [ "localhost" ],
          "Path": "/api/{*remainder}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api" }
        ]
      }
    },
    "Clusters": {
      "cluster_api": {
        "Destinations": {
          "cluster_api/destination": {
            "Address": "https://localhost:5002/"
          }
        }
      }
    }
  }
}
